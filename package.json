{
  "name": "@webcarrot/json-bc",
  "version": "0.0.1",
  "description": "Json like transport format - binary and compression included",
  "main": "dist/mod.cjs",
  "module": "dist/mod.mjs",
  "types": "dist/mod.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "prepack": "npm run build",
    "postpack": "npm run clean",
    "build:agnostic:ts": "rollup -c ./rollup.config.mjs",
    "build:agnostic:cjs": "rollup --format=cjs --file=dist/agnostic.cjs -p typescript -m -- src/agnostic/mod.ts",
    "build:agnostic:mjs": "rollup --format=es --file=dist/agnostic.mjs -p typescript -m -- src/agnostic/mod.ts",
    "build:agnostic": "npm run build:agnostic:ts && npm run build:agnostic:cjs && npm run build:agnostic:mjs",
    "build:node:ts": "rollup -c ./rollup.config.mjs",
    "build:node:cjs": "rollup --format=cjs --file=dist/node.cjs -p typescript -m -- src/node/mod.ts",
    "build:node:mjs": "rollup --format=es --file=dist/node.mjs -p typescript -m -- src/node/mod.ts",
    "build:node": "npm run build:node:ts && npm run build:node:cjs && npm run build:node:mjs",
    "build:deno": "node ./scripts/deno.mjs",
    "build": "npm run clean && npm run build:agnostic && npm run build:node && build:deno",
    "test": "tsc --noEmit && jest",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webcarrot/json-bc.git"
  },
  "keywords": [
    "json",
    "binary",
    "compression",
    "transport"
  ],
  "author": "Wojciech Wiercho≈Ça",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webcarrot/json-bc/issues"
  },
  "homepage": "https://github.com/webcarrot/json-bc#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "lz4-napi": "^2.0.3",
    "prettier": "^2.7.1",
    "rollup": "^2.77.0",
    "rollup-plugin-dts": "^4.2.2",
    "snappy": "^7.1.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "lz4-napi": "^2.0.3",
    "snappy": "^7.1.1"
  },
  "peerDependenciesMeta": {
    "lz4-napi": {
      "optional": true
    },
    "snappy": {
      "optional": true
    }
  }
}
